<UserControl x:Class="MyBudget.UI.Main.MainNavigationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"    
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="{lex:Loc MyBudget.UI:Resource:TextBlockNavigation}"
                       Margin="0 0 0 5" 
                       HorizontalAlignment="Center" 
                       Style="{StaticResource HeaderTextBlockStyle}" />
            <Button Content="{lex:Loc MyBudget.UI:Resource:ButtonNavigateWelcomePage}" 
                    Command="{Binding NavigateWelcomePage}" />
            <Button Content="{lex:Loc MyBudget.UI:Resource:ButtonNavigateAccounts}"  
                    Command="{Binding NavigateAccounts}" />
            <Button Content="{lex:Loc MyBudget.UI:Resource:ButtonNavigateStatements}"  
                    Command="{Binding NavigateStatements}" />
            <Button Content="{lex:Loc MyBudget.UI:Resource:ButtonNavigateOperations}"  
                    Command="{Binding NavigateOperations}" />
            <Expander Header="{lex:Loc MyBudget.UI:Resource:ExpanderConfiguration}">      
                <StackPanel>
                    <Button Content="{lex:Loc MyBudget.UI:Resource:ButtonNavigateRules}" 
                            Command="{Binding NavigateRules}" />
                    <Button Content="{lex:Loc MyBudget.UI:Resource:ButtonNavigateLanguageSetup}" 
                            Command="{Binding NavigateLanguageSetup}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</UserControl>
