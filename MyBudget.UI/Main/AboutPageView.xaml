<UserControl x:Class="MyBudget.UI.Main.AboutPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:MyBudget.UI.Core.Controls;assembly=MyBudget.UI.Core"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:local="clr-namespace:MyBudget.UI.Main"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <StackPanel Margin="50">
        <TextBlock Text="{lex:Loc MyBudget.UI:Resource:AboutPage_Header}" />
        <TextBlock Text="{lex:Loc MyBudget.UI:Resource:AboutPage_Info}" />
        <TextBlock>
            <Hyperlink NavigateUri="http://icons8.com/"
                       controls:GoToHyperlink.IsExternal="True">
                <TextBlock Text="{lex:Loc MyBudget.UI:Resource:AboutPage_IconsText}" />
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</UserControl>
