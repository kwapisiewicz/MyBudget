<UserControl x:Class="MyBudget.UI.Configuration.RuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lex="http://wpflocalizeextension.codeplex.com">
    <StackPanel x:Name="Wrapper">
        <StackPanel HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Command="{Binding Save}"
                    Content="{lex:Loc MyBudget.UI:Generic:ButtonSave}" />
            <Button Command="{Binding GoBack}"
                    Content="{lex:Loc MyBudget.UI:Generic:ButtonCancel}" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Content="{lex:Loc MyBudget.Core:Model.Translations:ClassificationRule_Description}" />
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Text="{Binding Data.Description}" />
            <Label Grid.Row="1"
                   Grid.Column="0"
                   Content="{lex:Loc MyBudget.Core:Model.Translations:ClassificationRule_FieldName}" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     IsReadOnly="True"
                     Text="{Binding Data.FieldName}" />
            <Label Grid.Row="2"
                   Grid.Column="0"
                   Content="{lex:Loc MyBudget.Core:Model.Translations:ClassificationRule_Parameter}" />
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Text="{Binding Data.Parameter}" />
            <Label Grid.Row="3"
                   Grid.Column="0"
                   Content="{lex:Loc MyBudget.Core:Model.Translations:ClassificationRule_Category}" />
            <TextBox Grid.Row="3"
                     Grid.Column="1"
                     Text="{Binding Data.Category}" />
            <Label Grid.Row="4"
                   Grid.Column="0"
                   Content="{lex:Loc MyBudget.Core:Model.Translations:ClassificationRule_SubCategory}" />
            <TextBox Grid.Row="4"
                     Grid.Column="1"
                     Text="{Binding Data.SubCategory}" />
        </Grid>
    </StackPanel>
</UserControl>
