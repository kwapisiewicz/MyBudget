<UserControl x:Class="MyBudget.UI.Configuration.RuleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lex="http://wpflocalizeextension.codeplex.com">
    <StackPanel x:Name="Wrapper">
        <StackPanel HorizontalAlignment="Right"
                    Orientation="Horizontal">
            <Button Command="{Binding Save}"
                    Content="{lex:Loc MyBudget.UI:Generic:ButtonSave}" />
            <Button Command="{Binding GoBack}"
                    Content="{lex:Loc MyBudget.UI:Generic:ButtonCancel}" />
        </StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   Grid.Column="0"
                   Content="{lex:Loc MyBudget.Model:Translations:ClassificationDefinition_Description}" />
            <TextBox Grid.Row="0"
                     Grid.Column="1"
                     Text="{Binding Data.Description}" />
            <Label Grid.Row="1"
                   Grid.Column="0"
                   Content="{lex:Loc MyBudget.Model:Translations:ClassificationDefinition_Category}" />
            <TextBox Grid.Row="1"
                     Grid.Column="1"
                     Text="{Binding Data.Category}" />
            <Label Grid.Row="2"
                   Grid.Column="0"
                   Content="{lex:Loc MyBudget.Model:Translations:ClassificationDefinition_SubCategory}" />
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     Text="{Binding Data.SubCategory}" />
            <ListBox Grid.Row="3"
                     Grid.ColumnSpan="2"
                     ItemsSource="{Binding Data.Rules}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBox Text="{Binding RegularExpression}" />
                            <TextBox Text="{Binding Account}" />
                            <TextBox Text="{Binding CounterAccount}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </StackPanel>
</UserControl>
